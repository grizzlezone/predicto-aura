{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    // Explicitly includes Deno types for globals like Deno.env and Request
    "types": ["deno_runtime"], 
    
    // This maps the remote URL to a local stub file to resolve the module locally
    "paths": {
      "https://deno.land/std@0.168.0/http/server.ts": ["./deno_stub.d.ts"]
    }
  },
  "include": ["**/*.ts"]
}